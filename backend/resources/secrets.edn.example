;; Example secrets configuration file for finance-aggregator
;;
;; DO NOT commit this file with real secrets!
;;
;; Setup:
;;   1. Generate age key:    age-keygen -o ~/.config/finance-aggregator/key.txt
;;   2. Create secrets:      ./scripts/secrets new
;;   3. Edit as needed:      ./scripts/secrets edit
;;
;; The encrypted file (secrets.edn.age) can be safely committed to git.

{;; Plaid API credentials
 ;; Get these from https://dashboard.plaid.com/team/keys
 :plaid {:client-id "your_client_id_here"
         :secret "your_secret_here"
         ;; Environment: :sandbox, :development, or :production
         :environment :sandbox}

 ;; Database encryption key for encrypting Plaid access tokens
 ;; If not provided, one will be generated on first use
 ;; Format: Base64-encoded 256-bit key
 :database {:encryption-key nil}

 ;; Add other secrets as needed for future integrations
 ;; Example:
 ;; :stripe {:api-key "sk_test_..."
 ;;          :webhook-secret "whsec_..."}

 ;; :email {:smtp-password "..."
 ;;         :api-key "..."}
 }
