{;; Development environment overrides
 ;; Merges with base-system.edn via meta-merge

 ;; Use dev database
 :finance-aggregator.system/db-path "./data/dev.db"

 ;; Development server port
 :finance-aggregator.system/http-port 8080

 ;; Dev secrets (Plaid sandbox credentials)
 :finance-aggregator.system/secrets-file "env/dev/resources/secrets.edn.age"

 ;; CORS: Allow all origins in dev
 :finance-aggregator.http/cors
 {:allowed-origins ["*"]
  :allowed-methods ["GET" "POST" "PUT" "DELETE" "OPTIONS"]
  :allowed-headers ["*"]
  :max-age 3600}}
