{;; Test environment overrides
 ;; Merges with base-system.edn via meta-merge

 ;; Use separate test database to avoid conflicts
 :finance-aggregator.system/db-path "./data/test.db"

 ;; Different port to avoid conflicts with running dev server
 :finance-aggregator.system/http-port 8081

 ;; Test secrets (Plaid sandbox credentials)
 :finance-aggregator.system/secrets-file "env/test/resources/secrets.edn.age"

 ;; CORS: Allow all origins in test
 :finance-aggregator.http/cors
 {:allowed-origins ["*"]
  :allowed-methods ["GET" "POST" "PUT" "DELETE" "OPTIONS"]
  :allowed-headers ["*"]
  :max-age 3600}}
